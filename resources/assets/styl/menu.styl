/*menu.styl*/

.menu 
  margin-top 25%
  text-align left
  .mm-title
    font-size 34px
    font-weight 200
  .m-title
    font-family: 'Raleway', sans-serif
    font-weight 200
    font-size 32px
    margin-top 30px
  .btn-group-vertical
    display block
  .m-link
    max-width 50%
    display block
    text-decoration none !important
    text-align left
    font-size 16px
  .filters
    display inline-flex
    flex-grow 5
    font-family monospace
    margin-left 0
    

@media screen and (max-width: 1000px)
  .menu 
    margin-top 35%
    .mm-title
      font-size 32px
    .m-title
      font-family: 'Raleway', sans-serif
      font-weight 200
      font-size 22px
      text-align left
    .m-link
      max-width 60%
  .filters
    display flex
    text-align left
    font-family monospace
@media screen and (max-width: 600px)
  .menu 
    margin-top 25%
    .mm-title
      font-size 16px
      font-family monospace
    .m-title
      text-align left
      font-size 18px
      font-family monospace
      text-align left
    .m-link
      max-width 100%
      font-size 12px
  .filters
    display flex
    font-size 14px
    text-align left
    font-family monospace
@media screen and (max-width: 600px)
  .menu 
    margin-top 75%